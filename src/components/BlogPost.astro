---
import Button from "./Button.astro";
const { url, title, description, imageUrl, tags } = Astro.props;
---

<div class="p-4">
  <div
    class="group h-full overflow-hidden rounded-lg border-2 border-gray-200 border-opacity-60"
  >
    <div class="h-64 overflow-hidden">
      <img
        class="h-64 w-full object-cover object-center transition-all group-hover:scale-110"
        src={imageUrl}
        alt={title}
      />
    </div>
    <div class="p-6">
      <div class="flex gap-2">
        {
          tags.map((post) => (
            <p class=" mb-1 text-xs font-medium tracking-widest text-gray-400">
              {post}
            </p>
          ))
        }
      </div>

      <h1 class="title-font mb-3 text-lg font-medium text-gray-900">
        {title}
      </h1>
      <p class="mb-3 leading-relaxed">
        {description}
      </p>
      <div class="flex flex-wrap items-center">
        <a
          class="group/link inline-flex items-center text-indigo-500 md:mb-2 lg:mb-0"
          href={url}
        >
          Read More
          <svg
            class="ml-2 h-4 w-4 transition-all group-hover/link:ml-4"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M5 12h14"></path>
            <path d="M12 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>
