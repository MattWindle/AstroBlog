---
const { iconName } = Astro.props;
---

<div
  class="group relative flex flex-col items-center justify-center overflow-hidden rounded-lg bg-gray-100 p-4 lg:p-8"
>
  <div class="h-10 w-auto sm:h-14 lg:h-20">
    <slot />
  </div>
  <div
    class="absolute -top-full left-0 z-10 flex h-full w-full items-center justify-center bg-blue-100/90 transition-all duration-500 group-hover:top-0"
  >
    <p class="font-medium text-gray-800 md:text-lg lg:text-2xl lg:font-bold">
      {iconName}
    </p>
  </div>
</div>
